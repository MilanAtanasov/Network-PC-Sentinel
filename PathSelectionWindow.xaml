        <Label x:Name="labelPfad" Content="Ordner auswählen:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonPath" Content="Pfad" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="545" Click="button_Click"/>

    </Grid>
</Window>
