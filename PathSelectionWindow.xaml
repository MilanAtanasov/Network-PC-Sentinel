        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_PC_Sentinel"
        mc:Ignorable="d"
        Title="PathSelectionWindow" Height="145" Width="587">
